{
  "name": "@nucleoabierto/teleprompter",
  "version": "1.0.0",
  "description": "CLI que copia configuraciones de agentes a tu proyecto",
  "main": "dist/index.js",
  "bin": {
    "teleprompter": "dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc && cp -r configs dist/configs",
    "test": "node --import tsx --conditions tsx --test tests/**/*.test.ts",
    "test:unit": "node --import tsx --conditions tsx --test tests/utils/github.test.ts tests/config/constants.test.ts tests/core/*.test.ts tests/commands/*.test.ts",
    "test:coverage": "c8 --all --src src --extension .ts node --import tsx --conditions tsx --test tests/**/*.test.ts",
    "test:watch": "node --import tsx --conditions tsx --test --watch tests/**/*.test.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "typedoc": "typedoc"
  },
  "imports": {
    "#*": "./*"
  },
  "keywords": [
    "cli",
    "agents",
    "ai",
    "configuration"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "fs-extra": "^11.3.3",
    "tar": "^7.5.7",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@nucleoabierto/eslint-config-cardinal": "^1.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "execa": "^9.6.1",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.0",
    "typescript": "^5.9.3"
  }
}
